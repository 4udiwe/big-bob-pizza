            "properties": {
                "amount": {
                    "type": "number"
                },
                "createdAt": {
                    "type": "string"
                },
                "eventId": {
                    "type": "string"
                },
                "eventType": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "occurredAt": {
                    "type": "string"
                },
                "orderId": {
                    "type": "string"
                },
                "paymentId": {
                    "type": "string"
                },
                "reason": {
                    "type": "string"
                },
                "userId": {
                    "type": "string"
                }
            }
        },
        "get_order_events.OrderEventsResponse": {
            "type": "object",
            "properties": {
                "events": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/get_order_events.OrderEventResponse"
                    }
                },
                "orderId": {
                    "type": "string"
                }
            }
        },
        "get_revenue.RevenueResponse": {
            "type": "object",
            "properties": {
                "endDate": {
                    "type": "string"
                },
                "revenue": {
                    "type": "number"
                },
                "startDate": {
                    "type": "string"
                }
            }
        },
        "get_stats.StatResponse": {
            "type": "object",
            "properties": {
                "count": {
                    "type": "integer"
                },
                "date": {
                    "type": "string"
                },
                "eventType": {
                    "type": "string"
                },
                "totalAmount": {
                    "type": "number"
                },
                "uniqueOrders": {
                    "type": "integer"
                },
                "uniqueUsers": {
                    "type": "integer"
                }
            }
        },
        "get_stats.StatsResponse": {
            "type": "object",
            "properties": {
                "endDate": {
                    "type": "string"
                },
                "startDate": {
                    "type": "string"
                },
                "stats": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/get_stats.StatResponse"
                    }
                }
            }
        }
    }
}